<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="it.unicam.cs.mpgc.jtime126294.controller.ReportController"
      spacing="10" style="-fx-padding: 20;">
    
    <Label text="Reporting" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Interval:"/>
        <DatePicker fx:id="startDate" />
        <Label text="to"/>
        <DatePicker fx:id="endDate" />
        <Button text="Update" onAction="#generateReport"/>
    </HBox>
    
    <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS" orientation="HORIZONTAL">
        <items>
            <VBox spacing="5">
                <Label text="Details" style="-fx-font-weight: bold;"/>
                <TreeView fx:id="reportTreeView" VBox.vgrow="ALWAYS" />
            </VBox>
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Visuals" style="-fx-font-weight: bold;"/>
                <javafx.scene.chart.PieChart fx:id="statusChart" title="Task Status Distribution" VBox.vgrow="ALWAYS"/>
                <javafx.scene.chart.BarChart fx:id="effortChart" title="Estimated vs Actual Effort">
                    <xAxis><javafx.scene.chart.CategoryAxis label="Project"/></xAxis>
                    <yAxis><javafx.scene.chart.NumberAxis label="Hours"/></yAxis>
                </javafx.scene.chart.BarChart>
            </VBox>
        </items>
    </SplitPane>
</VBox>
