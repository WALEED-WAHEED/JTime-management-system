<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="it.unicam.cs.mpgc.jtime126294.controller.ProjectController"
      spacing="10" style="-fx-padding: 20;">
    
    <VBox spacing="10" prefWidth="250.0">
        <Label text="Projects" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <ListView fx:id="projectList" VBox.vgrow="ALWAYS" />
        <Button text="Add Project" onAction="#handleNewProject" maxWidth="Infinity"/>
    </VBox>
    
    <VBox spacing="10" HBox.hgrow="ALWAYS">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="projectTitleLabel" text="Select a project" style="-fx-font-size: 18; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnCloseProject" text="Close Project" onAction="#handleCloseProject" disable="true"/>
        </HBox>
        
        <TableView fx:id="taskTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDescription" text="Description" prefWidth="200.0"/>
                <TableColumn fx:id="colEstimate" text="Estimated" prefWidth="100.0"/>
                <TableColumn fx:id="colActual" text="Actual" prefWidth="100.0"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
            </columns>
        </TableView>
        
        <HBox spacing="10">
            <Button text="Add Task" onAction="#handleNewTask"/>
            <Button text="Complete Selected" onAction="#handleCompleteTask"/>
        </HBox>
    </VBox>
</HBox>
